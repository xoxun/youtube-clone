doctype html 

html(lang="ko")
    head
        title #{pageTitle} | Utube
        //block:다른 pug file이 채워넣을 공간 마련하기
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle
        nav 
            ul
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href="/") Home
                if loggedIn 
                    li 
                        a(href="/logout") Log out
                    li 
                        a(href="/my-profile") #{loggedInUser.name}'s Profile
                else
                    li 
                        a(href="/join") Join
                    li 
                        a(href="/login") Login
                li 
                    a(href="/search") Search
                
        main
            block content
    include partials/footer