extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="name", placeholder="Name", required, type="text")
        input(name="email", placeholder="E-mail", required, type="email", )
        input(name="username", placeholder="Username", required, type="text",)
        input(name="password", placeholder="Password", required, type="password")
        input(name="password2", placeholder="Comfirm Password", required, type="password")
        input(name="location", placeholder="Location", type="text")
        input(type="submit", value="Join")
    hr
    div
        span Already have an account? 
        a(href="/login") Login in now  &rarr;