doctype html 

html(lang="ko")
    head
        title #{pageTitle} | Utube
        //block:다른 pug file이 채워넣을 공간 마련하기
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}
            nav     
                ul  
                    if fakeUser.loggedIn
                        li 
                            a(href="/login") Log out
                    else 
                        li 
                            a(href="/login") Login
            h1=pageTitle
        main
            block content
    include partials/footer